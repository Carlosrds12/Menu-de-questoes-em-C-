#include <iostream>
using namespace std;

int main() {
int opcao;
cout << "***** Menu de Questões *****" << endl;
cout << "1 - Questão 1" << endl;
cout << "2 - Questão 2" << endl;
cout << "3 - Questão 3" << endl;
cout << "4 - Questão 4" << endl;
cout << "5 - Sair" << endl;
cout << "Escolha uma opção: ";
cin >> opcao;
switch (opcao) {
    case 1:
        cout << "Resposta da Questão 1" << endl;
        break;
    case 2:
        cout << "Resposta da Questão 2" << endl;
        break;
    case 3:
        cout << "Resposta da Questão 3" << endl;
        break;
    case 4:
        cout << "Resposta da Questão 4" << endl;
        break;
    case 5:
        cout << "Saindo do Menu de Questões" << endl;
        break;
    default:
        cout << "Opção inválida" << endl;
        break;
}
return 0;
}
